<div class="search__bar__container" id="search__bar__home__background">
    <div class="search__bar__element__container">
        
        <form class="search" id="home__search__form" method="get" action="https://skytreep.herokuapp.com/search">
            <div class="search__bar__options">
                <div class="aller-retour">
                    <select id="flight_type" name="flight_type">
                        <option value="oneway">Aller simple</option>
                        <option selected="selected" value="round">Aller retour</option>
                    </select>
                </div>

                
                <p class="passager__description">Passagers</p>
                <div class="passager">
                    <div class="value-button" id="decrease"  value="Decrease Value"><p>-</p></div>
                        <input type="number" id="passengers" name="passengers" min="1" max="9" value="1" />
                    <div class="value-button" id="increase"  value="Increase Value"><p>+</p></div>
                </div>
            </div>
            <div class="search__bar__frame" id="search__bar__frame__home">
                <div class="search__bar__box home__search__box">
                    <input type="text" class="search__field home__search__field left-element" autocomplete="off" id="departLoc__search" name="depart" placeholder="Partir de" list="airports__depart">
                    <input type="text" class="search__field home__search__field right-element" autocomplete="off" id="returnLoc__search" name="return" placeholder="Aller à" list="airports__return">
                </div>
                <div class="search__bar__box home__search__box">
                    <input type="text" class="search__field home__search__field left-element" id="departDate__search" name="from" placeholder="Aller le">
                    <input type="text" class="search__field home__search__field right-element" id="returnDate__search" name="to" placeholder="Retour le">
                </div>
                <button class="checkout__button home__search__button" id="blue">
                    <span>Rechercher</span>
                </button>
            </div>
        </form>
    </div>
</div>


