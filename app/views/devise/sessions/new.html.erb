<%= render "shared/navbar" %>

<div class="devise__interface__container">
    <h2 style="text-align: center;">Connection</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    label: "Mot de passe",
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label: "Rester connectÃ©", as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="interface__submit">
        <button type="submit">Se connecter</button>
      </div>
    <% end %>

    <div class="login__bottom__links">
      <%= render "devise/shared/links" %>
    </div>
</div>
 


