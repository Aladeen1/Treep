<div class="dashboard">

	<%= content_tag :div, class: "flights_information", data: {flights: @flights} do %>
    <% end %>

  <!-- <div class="background-dash"><img src="https://res.cloudinary.com/tark-industries/image/upload/v1553191549/Frame_dash.png"></div> -->

